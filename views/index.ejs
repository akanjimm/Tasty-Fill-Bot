<head>
    <style>
        .chat-container {
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            height: 100%;
        }

        .chat-header {
            background-color: #6A5ACD;
            color: white;
            padding: 20px;
        }

        .chat-messages {
            overflow-y: auto;
            padding: 20px;
        }

        .message {
            display: block;
            margin-bottom: 10px;
            font-size: 16px;
        }

        .message.sent {
            display: flex;
            justify-content: flex-end;
        }

        .message.received {
            display: flex;
            justify-content: flex-start;
        }

        .message-content {
            display: inline-block;
            max-width: 80%;
            padding: 10px;
            border-radius: 20px;
            font-size: 16px;
            line-height: 1.4;
            box-shadow: 0px 1px 3px rgba(0, 0, 0, 0.3);
        }

        .message-content.sent {
            background-color: #6A5ACD;
            color: white;
            border-top-right-radius: 0px;
        }

        .message-content.received {
            background-color: #f1f0f0;
            color: #444;
            border-top-left-radius: 0px;
        }

        .chat-input {
            display: flex;
            align-items: center;
            padding: 20px;
        }

        .chat-input input[type="text"] {
            flex-grow: 1;
            padding: 10px;
            font-size: 16px;
        }

        .chat-input button {
            padding: 10px;
            background-color: #6A5ACD;
            color: white;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            margin-left: 10px;
        }
    </style>
    <script src="index.js" defer type="module"></script>
</head>

<body>
    <div class="chat-container">
        <div class="chat-header">
            <h2>Welcome to the food ordering chat application!</h2>
        </div>
        <div class="chat-messages">
        </div>
        <div class="chat-input">
            <input type="text" placeholder="Type your message here...">
            <button id="send-button">Send</button>
        </div>
    </div>
</body>